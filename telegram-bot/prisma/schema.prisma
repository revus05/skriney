generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  telegramId Int     @id
  uuid       String?

  useDefaultCategory    Boolean @default(false)
  useDefaultCurrency    Boolean @default(true)
  useDefaultBankAccount Boolean @default(true)

  createdAt DateTime @default(dbgenerated("NOW()")) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

enum Currency {
  USD // Доллар США
  EUR // Евро
  JPY // Японская иена
  GBP // Британский фунт стерлингов
  AUD // Австралийский доллар
  CAD // Канадский доллар
  CHF // Швейцарский франк
  CNY // Китайский юань
  HKD // Гонконгский доллар
  NZD // Новозеландский доллар
  SEK // Шведская крона
  KRW // Южнокорейская вона
  SGD // Сингапурский доллар
  NOK // Норвежская крона
  MXN // Мексиканский песо
  INR // Индийская рупия
  RUB // Российский рубль
  ZAR // Южноафриканский рэнд
  TRY // Турецкая лира
  BRL // Бразильский реал
  TWD // Новый тайваньский доллар
  DKK // Датская крона
  PLN // Польский злотый
  THB // Тайский бат
  MYR // Малайзийский ринггит
  IDR // Индонезийская рупия
  HUF // Венгерский форинт
  CZK // Чешская крона
  ILS // Израильский шекель
  CLP // Чилийский песо
  PHP // Филиппинское песо
  AED // Дирхам ОАЭ
  COP // Колумбийский песо
  SAR // Саудовский риял
  RON // Румынский лей
  BGN // Болгарский лев
